<mvc:View controllerName="osr.edw.data.info.controller.DetailObject"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
          xmlns:core="sap.ui.core"
          xmlns:l="sap.ui.layout"
          xmlns:f="sap.ui.layout.form"
          xmlns:smartTable="sap.ui.comp.smarttable"
          displayBlock="true"
          xmlns="sap.m"
          class="sapUiSizeCompact">

  <Page title="{i18n>title}"
        showNavButton="false"
        navButtonPress="onNavBack">
    <headerContent>
    </headerContent>
    <content>
      <IconTabBar id="scv-tabbar"
                  expanded="true"
                  class="sapUiResponsiveContentPadding"
                  select="onSelectTab"
                  expand="onExpandTab"
                  expandable="false"
                  stretchContentHeight="false">

        <items>
          <IconTabFilter id="scv-current"
                         iconDensityAware="false"
                         icon="sap-icon://hint"
                         text="{i18n>dataInput.creation}"
                         key="current-tab-key">
            <content>
              <f:SimpleForm id="form-abn"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="4"
                            adjustLabelSpan="true"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="2"
                            singleContainerFullSize="false"
                            class="osrSelect">
                <f:content>

                  <Label vAlign="Middle"
                         text="Select your source" />
                  <Select id="abn-select"
                          forceSelection="false"
                          selectedKey=""
                          change="onAbnSelectChange"
                          items="{
                                  path: 'orgModel>/ABN'
                                }">
                    <core:Item key="{orgModel>}"
                               text="{orgModel>}" />
                  </Select>


                </f:content>
              </f:SimpleForm>
              <core:Fragment fragmentName="osr.edw.data.info.view.fragment.SourceTable"
                             type="XML" />

              <f:SimpleForm id="form-data-info"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="4"
                            emptySpanL="4"
                            emptySpanM="4"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false">
                <f:content>

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.source}" />
                  <Select id="source-select"
                          forceSelection="false"
                          selectedKey=""
                          change="onAbnSelectChange"
                          items="{
                        path: 'orgModel>/ABN'
                      }">
                    <core:Item key="{orgModel>}"
                               text="{orgModel>}" />
                  </Select>

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.generated_file_name}" />
                  <Text text="TEST" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.table_name}" />
                  <Input value="{searchParameters>/table_name}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.timestamp}" />
                  <Input value="{searchParameters>/timestamp}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.source_field_value}" />
                  <Input value="{searchParameters>/source_field_value}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.frequency}" />
                  <Input value="{searchParameters>/frequency}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.row_counts}" />
                  <Input value="{searchParameters>/row_counts}"
                         autocomplete="false" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.year_type}" />
                  <Input value="{searchParameters>/year_type}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.file_received_date}" />
                  <Input value="{searchParameters>/file_received_date}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.period_key}" />
                  <Input value="{searchParameters>/period_key}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.from_date}" />
                  <Input value="{searchParameters>/from_date}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.to_date}" />
                  <Input value="{searchParameters>/to_date}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.data_set_type}" />
                  <Input value="{searchParameters>/data_set_type}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.data_input}" />
                  <Input value="{searchParameters>/data_input}" />

                  <Label vAlign="Middle"
                         text="{i18n>dataInput.raw_file_name}" />
                  <Input value="{searchParameters>/raw_file_name}" />

                </f:content>

              </f:SimpleForm>
              <OverflowToolbar>
                <ToolbarSpacer />
                <Button id="dialog-back"
                        press="onClearPressed"
                        text="{i18n>dataInput.clearForm}" />

                <Button id="dialog-next"
                        press="onCreatePressed"
                        text="{i18n>dataInput.createInfo}" />

              </OverflowToolbar>


            </content>

          </IconTabFilter>

        </items>
      </IconTabBar>
    </content>


  </Page>

</mvc:View>
